@model CRUD_VICENTE.Models.ProdutoModel
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

@{
    ViewData["Title"] = "Inserir";
}

<h2>Cadastrar Novo Produto</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inserir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeProduto" class="control-label"></label>
                <input asp-for="NomeProduto" class="form-control" />
                <span asp-validation-for="NomeProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input type= "number" asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input @*id="quadrado"*@ type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Voltar</a>
</div>

<script>
        var quantidadeRecebida;

        $.ajax({
            url: "/Home/MostrarContagem",
            success: function (qtd) {
                quantidadeRecebida = qtd;
            },
            error: function () {
                console.error("Erro");
            }

        })


        var connection = new signalR.HubConnectionBuilder().withUrl("/HubCrud").build();

        connection.start().then(function () {

        }).catch(function (err) {
            return console.error(err.toString());

        });



        var quadrado = document.getElementById("quadrado");


        connection.on("VerAlteracao", function () {
            if (quantidadeRecebida == 1) {
                console.log("Sem atualizações no momento");
                function recarregar() {
                    location.reload(true)
                }
                setTimeout(recarregar, 3000);

            }
            else {
                console.log("Retorno = 0 , existem atualizações para serem realizadas")

            }
        })



        setInterval(function () {
            connection.invoke("Alteracao").catch(function (err) {
                return console.error(err.toString());
            });
            event.preventDefault();
        }, 5000)




</script>



