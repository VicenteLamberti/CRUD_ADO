@model IEnumerable<CRUD_ADO.Models.ProdutoModel>

@{
    ViewData["Title"] = "Listar";
}




<h1>LISTAGEM DE PRODUTOS</h1>

@if (this.User.IsInRole("admin"))
{
    <p>
        <a class="btn btn-dark" asp-action="Inserir">CADASTRAR NOVO PRODUTO</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                AÇÕES
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @if (this.User.IsInRole("admin"))
                    {
                        @Html.ActionLink("EDITAR", "Editar", new { id = item.Id }, new { @class = "btn btn-warning" })

                    }
                    @Html.ActionLink("DETALHAR", "Detalhar", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("ADICIONAR NO CARRINHO", "AdicionarNoCarrinho", "Carrinho", new { id = item.Id }, new { @class = "btn btn-success" })
                    @if (this.User.IsInRole("admin"))
                    {
                        @Html.ActionLink("EXCLUIR", "DeletarProduto", new { id = item.Id }, new { @class = "btn btn-danger" })

                    }
                </td>
            </tr>
        }
    </tbody>
</table>
